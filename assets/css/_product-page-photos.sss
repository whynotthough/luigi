#productBottomHalf
  border-top: 1px solid rgba(198,197,197,0.3)

  & #thumbs
    text-align: center

    & .current
      opacity: 1

    & img
      max-width: 115px
      width: 15%
      padding: 5px
      transition: all 0.3s
      cursor: pointer
      margin: 0
      display: inline
      opacity: 0.6

      &:hover
        opacity: 1
        display: inline

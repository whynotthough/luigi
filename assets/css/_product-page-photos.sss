#bigphoto
  height: 440px
  position: relative

  & .gal-btn
    width: 60px
    height: auto
    opacity: 0.6
    cursor: pointer
    position: absolute
    top: 50%
    transform: translateY(-50%)

    &:hover
      opacity: 1

  & #left-btn
    left: 1%
  & #right-btn
    right: 1%


  & #big-photo-wraper
    height: 100%
    text-align: center

    /* background: lightblue */

    & img
      max-height: 100%
      max-width: 100%
      margin: 0 auto
      /* margin-bottom: 5px */
      background: linear-gradient(160deg,
                                        rgba(242, 232, 200,0.1) 0%,
                                        rgba(242, 232, 200,0.2) 50%)


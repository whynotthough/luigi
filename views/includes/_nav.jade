nav#sidenav
	a#logo(href="/")
		img#middlelogo(src="/img/middle-logo-borrelli.svg", alt="")
	ul
		li
			a#globalsite(href="http://www.luigiborrelli.com") LuigiBorrelli.com
				i.fa.fa-external-link(style="font-size: 0.8em; padding-left: 5px;" aria-hidden="true")
		li
			a(href="/") All Fragrances
		
		each product in contentful.products
			- var productName = product.name
			li
				a(href="/products/#{slugme(productName.toLowerCase())}.html") #{productName}	
		
		li
			a.mycart.snipcart-checkout(href="#")
				span My Cart
				img#bagicon(src="/img/bag.svg", alt="")

nav#mobnav
	#topbar
		#burger(onclick="toggleBurger(this)")
			.bar1
			.bar2
			.bar3
		script.
			function toggleBurger(x) {
			  x.classList.toggle("change");
			  document.querySelector("ul#mobmenu").classList.toggle("collapsed");
			}
		a#smalllogo(href="/")
			img(src="/img/lb-small-logo.svg", alt="")
		a.mycart.snipcart-checkout(href="#")
			img(src="/img/bag.svg", alt="")

	ul#mobmenu.collapsed
		li
			a#globalsite(href="http://www.luigiborrelli.com") LuigiBorrelli.com
				i.fa.fa-external-link(style="font-size: 0.8em; padding-left: 5px;" aria-hidden="true")
		li
			a.mobmenu(href="/") All Fragrances
		
		each product in contentful.products
			- var productName = product.name
			li
				a.mobmenu(href="/products/#{slugme(productName.toLowerCase())}.html") #{productName}